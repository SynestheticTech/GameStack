{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "build/**", "use": "@vercel/static" },
    { "src": "api/**", "use": "@vercel/node" }
  ],
  "routes": [{ "src": "/(.*)", "dest": "/index.html" }],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "command": "npm run build:prod",
    "use": "@vercel/static"
  }
}
